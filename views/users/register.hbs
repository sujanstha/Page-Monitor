<div class="row">
  <div class="col-md-4 col-md-offset-4 col-sm-5 col-sm-offset-3">
    <form class="form-signin" method="POST">
      <h1 class="form-signin-heading">Register</h1>
      <hr>
      <label for="inputEmail" class="sr-only">Email address</label>
      <input type="text" id="inputName" name="fullName" class="form-control" placeholder="Full Name" required autofocus value="{{input.fullName}}">
      <br />
      <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email address" required value="{{input.email}}">
      <br />
      <label for="inputPassword" class="sr-only">Password</label>
      <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required>
      <br />
      <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
    </form>
  </div>
</div>
