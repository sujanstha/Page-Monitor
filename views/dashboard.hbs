<div class="row">
	<div class="col-md-12 text-center" style="margin-top:20px;">
		<a href="/monitor-new-page" class="btn btn-primary btn-lg ">Monitor a new Page</a>
	</div>
	<div class="col-md-12">
		<hr>
		<h2>Pages Monitored</h2>
		<table class="table table-striped">
			<tr>
				<th>#</th>
				<th>Page Title</th>
				<th>Frequency</th>
				<th>Keywords</th>
				<th>Last Checked</th>
				<th>Last Modified</th>
				<th>Edit</th>
			</tr>
			{{#each webpages}}
				<tr>
					<td>{{@index}}</td>
					<td>{{this.pageTitle}} <br>
						<a href="{{this.pageLink}}">{{this.pageLink}}</a>
					</td>
					<td>{{this.frequency}}</td>
					<td>{{this.keywords}}</td>
					<td>{{this.lastChecked}}</td>
					<td>{{this.lastModified}}</td>
					<td><a href="/dashboard/edit/{{@index}}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
				</tr>
			{{/each}}
		</table>
	</div>
</div>
